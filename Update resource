private void handleRejoin(Resource res) {
    int year = LocalDate.now().getYear();
    int month = LocalDate.now().getMonthValue();

    BigDecimal one = BigDecimal.ONE;
    BigDecimal zero = BigDecimal.ZERO;

    // --- Current Year Availability ---
    BigDecimal[] months = new BigDecimal[12];
    for (int i = 0; i < 12; i++)
        months[i] = (i + 1 >= month) ? one : zero;

    AvailabilityCompositeId aidCurr = new AvailabilityCompositeId(res.getPsid(), year, res.getTeam());
    Availability availCurr = new Availability(aidCurr,
        months[11], months[0], months[1], months[2], months[3], months[4],
        months[5], months[6], months[7], months[8], months[9], months[10]);
    resourceService.addAvailability(availCurr);

    // --- Next Year Full Availability ---
    AvailabilityCompositeId aidNext = new AvailabilityCompositeId(res.getPsid(), year + 1, res.getTeam());
    Availability availNext = new Availability(aidNext, one, one, one, one, one, one, one, one, one, one, one, one);
    resourceService.addAvailability(availNext);

    // --- Reset Holidays for Both Years ---
    for (int y = year; y <= year + 1; y++) {
        HolidayPlannerCompositeId hpci = new HolidayPlannerCompositeId(res.getPsid(), y);
        HolidayPlanner hp = new HolidayPlanner(hpci,
            zero, zero, zero, zero, zero, zero, zero, zero, zero, zero, zero, zero);
        holidayPlannerRepository.save(hp);
    }

    // --- Log Rejoin ---
    resourceService.addResourceLog(getChangeLog(
        "Resource rejoined: " + res.getPsid() +
        ", Name: " + res.getName() +
        ", Team: " + res.getTeam()
    ));
}
